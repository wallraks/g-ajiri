<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:padding="@dimen/activity_horizontal_margin"
    android:layout_height="match_parent">

    <TextView
        android:id="@+id/textView2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Current Jobs" />

    <LinearLayout
        android:layout_width="match_parent"
        android:orientation="vertical"
        android:background="@drawable/layer_card_background"
        android:layout_height="wrap_content">
        <include layout="@layout/custom_job_post"></include>
        <include layout="@layout/custom_job_post_full"></include>
        <include layout="@layout/custom_job_post_full"></include>
    </LinearLayout>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Past Jobs" />

    <LinearLayout
        android:layout_width="match_parent"
        android:orientation="vertical"
        android:background="@drawable/layer_card_background"
        android:layout_height="wrap_content">
        <include layout="@layout/custom_job_post_past"></include>
        <include layout="@layout/custom_job_post_past"></include>
    </LinearLayout>


</LinearLayout>